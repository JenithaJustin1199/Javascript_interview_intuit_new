--------> JS <---------
// script.js

const ratingContainer = document.querySelector(".rating");
const stars = ratingContainer.querySelectorAll(".star");
const output = document.getElementById("output");

// Mapping rating → color class
const ratingClassMap = [
    "one",
    "two",
    "three",
    "four",
    "five"
];

// Event delegation
ratingContainer.addEventListener("click", (event) => {
    if (!event.target.classList.contains("star")) return;

    const rating = Number(event.target.dataset.value);
    updateRating(rating);
});

function updateRating(rating) {
    // Clear previous state
    stars.forEach(star => {
        star.className = "star";
    });

    // Apply new state
    for (let i = 0; i < rating; i++) {
        stars[i].classList.add(ratingClassMap[rating - 1]);
    }

    output.innerText = `Rating is: ${rating}/${stars.length}`;
}
