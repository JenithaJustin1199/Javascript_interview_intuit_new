}

/* Search bar */
.top-nav .search input {
  padding: 8px 12px;
  border-radius: 4px;
  border: 1px solid #ccc;
  width: 200px;
  transition: width 0.3s ease; /* smooth expand on focus */
}

/* Expand search on focus */
.top-nav .search input:focus {
  width: 300px;
  outline: none;
  border-color: #0a66c2; /* focus color */
}

/* Navigation links */
.nav-links {
  list-style: none; /* remove bullets */
  display: flex;
  gap: 16px; /* space between items */
}

/* Links styling */
